public class ExemploArray {
	public static void main(String[] args) {
		String[] nomes = {"Pedro","Maria","Ana","Beatriz","Paulo"};

		System.out.println("Tamanho do Array: "+ nomes.length);

		System.out.println("\n\nImprimindo índice manualmente");
		System.out.println(nomes[0]);
		System.out.println(nomes[1]);
		System.out.println(nomes[2]);
		System.out.println(nomes[3]);
		
		System.out.println("\n\nUsando for");
		for(int i=0; i < nomes.length; i++) {
			System.out.println(nomes[i]);
		}
		
		System.out.println("\nLendo do último para o primeiro");
		for(int i=nomes.length-1; i >= 0; i--) {
			System.out.println(nomes[i]);
		}
		
		
		System.out.println("\n\nUsando for..each");
		for(String n: nomes) {
			System.out.println(n);
		}
	}
}
